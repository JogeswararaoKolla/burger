<div class="container">
    <h1 class="text-center font-italic text-uppercase text-warning">Eat Da Burger... </h1>
    <div class="row">
        <div class="col-md-4">
            <img class="float-right" src="/assets/Images/1.png" height="100px" width="100px" />
        </div>
        <div class="col-md-2">
            <img class="float-right" src="/assets/Images/3.png" height="100px" width="100px" />
        </div>
        <div class="col-md-3">
            <img src="/assets/Images/2.png" height="100px" width="100px" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{#each burgers}}
            {{#unless devoured}}
            <div class="row">
                <div class="col-md-9">
                    <div class="card">
                        <div class="card-body text-right">
                            <p contenteditable="true" id={{this.id}} class="insert-data d-inline">
                                {{this.id}}.{{this.burger_name}}</p>
                            <button type="button" class="delete-data" id={{this.id}}>x</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <button id={{this.id}} class="float-right devour-data btn btn-warning">Devour it</button>
                </div>
            </div>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Gobbled...</div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        {{#each burgers}}
                        {{#if devoured}}
                        <li class="list-group-item">{{this.id}}.{{this.burger_name}}</li>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form class="form-group" action="/create" method="POST">
                <div class="form-group">
                    <label for="exampleFormControlTextarea1"></label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" name="burger_name" rows="3"
                        required></textarea>
                </div>
                <div class="d-flex justify-content-center">
                    <input class="btn btn-warning" type="submit" value="Submit">
                </div>
            </form>
            <p>Enter a burger you wanted to eat ! and click submit button !</p>
        </div>
    </div>
    <script src="/assets/js/burger.js"></script>
</div>